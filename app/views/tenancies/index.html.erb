<div class="px-4 sm:px-6 lg:px-8">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="font-bold text-4xl">Escritórios</h1>
    </div>
    <div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none">
      <%= link_to "Novo Escritório", new_tenancy_path, class: "block rounded-md bg-cyan-950 px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-cyan-800 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-teal-300" %>
    </div>
  </div>
  <div class="mt-8 flow-root">
    <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
        <table class="min-w-full divide-y divide-gray-300">
          <thead>
            <tr>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">ID</th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Nome</th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Owner</th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Usuários</th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Criado em</th>

              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900"></th>              
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <% @tenancies.each do |tenancy| %>
                <tr>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= tenancy.id %></td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= tenancy.name %></td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= tenancy.users.present? ? tenancy.users.find_by(role: 'admin')&.email : 'Not available' %></td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= tenancy.users.count %>/3</td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= tenancy.created_at.strftime('%d/%m/%Y - %H:%M:%S') %></td>

                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                    <%= link_to "Edit", edit_tenancy_path(tenancy), class:"text-indigo-600 hover:text-indigo-900 mx-2" %>
                  </td>
                </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

