<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <%= render @report %>


    <div class="my-5 flex gap-5">
      <%= link_to "Edit", edit_report_path(@report), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      <%= link_to "Back", reports_path, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      <%= button_to "Destroy", @report, method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    </div>
  </div>
</div>
