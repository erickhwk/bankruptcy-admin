<div id="<%= dom_id report %>">
  <p class="my-5">
          <h1 class="font-bold text-4xl"><%= report.title %></h1>
  </p>

  <p class="my-5">
    <%= report.content %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Anexos (<%= report.files.count %>):</strong>
    <ul>
      <% report.files.each do |file| %>
        <li>
          <div class="flex gap-2 items-center">
          <%= link_to rails_blob_path(file, disposition: "attachment") do %>
              <div class="m-4 flex gap-3 items-center">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 9.75v6.75m0 0-3-3m3 3 3-3m-8.25 6a4.5 4.5 0 0 1-1.41-8.775 5.25 5.25 0 0 1 10.233-2.33 3 3 0 0 1 3.758 3.848A3.752 3.752 0 0 1 18 19.5H6.75Z" />
              </svg>
              <b><%= file.filename %></b>
            </div>
          <% end %>
          <%= button_to remove_file_report_path(id: @report.id, file: file.id), method: 'delete' do  %>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="size-5">
              <path fill-rule="evenodd" d="M8.75 1A2.75 2.75 0 0 0 6 3.75v.443c-.795.077-1.584.176-2.365.298a.75.75 0 1 0 .23 1.482l.149-.022.841 10.518A2.75 2.75 0 0 0 7.596 19h4.807a2.75 2.75 0 0 0 2.742-2.53l.841-10.52.149.023a.75.75 0 0 0 .23-1.482A41.03 41.03 0 0 0 14 4.193V3.75A2.75 2.75 0 0 0 11.25 1h-2.5ZM10 4c.84 0 1.673.025 2.5.075V3.75c0-.69-.56-1.25-1.25-1.25h-2.5c-.69 0-1.25.56-1.25 1.25v.325C8.327 4.025 9.16 4 10 4ZM8.58 7.72a.75.75 0 0 0-1.5.06l.3 7.5a.75.75 0 1 0 1.5-.06l-.3-7.5Zm4.34.06a.75.75 0 1 0-1.5-.06l-.3 7.5a.75.75 0 1 0 1.5.06l.3-7.5Z" clip-rule="evenodd" />
            </svg>
          <% end %>
          </div>
        </li>
      <% end %>
    </ul>
  </p>
</div>
