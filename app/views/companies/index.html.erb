<% if notice.present? %>
  <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
<% end %>

<div class="px-4 sm:px-6 lg:px-8">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="font-bold text-4xl">Empresas</h1>
      <p class="mt-2 text-sm text-gray-700">Uma lista com todas as empresas arroladas nos processos.</p>
    </div>
    <div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none">
      <%= link_to "Nova Empresa", new_company_path, class: "block rounded-md bg-indigo-600 px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
    </div>
  </div>
  <div class="mt-8 flow-root">
    <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
        <table class="min-w-full divide-y divide-gray-300">
          <thead>
            <tr>
              <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-0">Criado em</th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Razão Social</th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">CNPJ</th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Associado à</th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900"></th>              
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <% @companies.each do |company| %>
                <tr>
                  <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-0"><%= company.created_at.strftime('%d/%m/%Y - %H:%M:%S') %></td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= company.legal_name %></td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= company.cnpj %></td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= company.lawsuits.present? ? company.lawsuits.pluck(:alias).join(', ') : 'Sem associações' %></td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                    <%= link_to "Show", company_path(company), class:"text-indigo-600 hover:text-indigo-900" %>
                    <%= link_to "Edit", edit_company_path(company), class:"text-indigo-600 hover:text-indigo-900 mx-2" %>
                  </td>
                </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

